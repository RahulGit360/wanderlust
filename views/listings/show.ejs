<%- layout('layouts/boilerplate') %>  
<script>
  let mapboxToken = "<%= process.env.MAP_TOKEN %>";
  let coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
</script>    

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h1><%= listing.title %></h1>
    <i><%= listing.owner.email %></i>

    <p><strong>Description:</strong> <%= listing.description %></p>
    <p><strong>Price $</strong><%= listing.price.toLocaleString("en-US") %></p>
    <p><strong>Location:</strong> <%= listing.location %>, <%= listing.country %></p>

    <img src="<%= listing.image.url %>" alt="<%= listing.title %>" style="max-width: 300px; max-height: 300px;">

    <p> Location : <%= listing.location %></p>

    <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
      <div class="btns">
        <a href="/listings/<%= listing._id %>/edit">
          <button class="btn btn-dark edit-btn">Edit</button>
        </a>
        <br/><br/>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
    <% } %>
  </div> <!-- closes .col-8.offset-2 -->

  <% if (currentUser) { %>
    <div class="col-8 offset-2 mb-3">
      <hr/>

      <% if (currentUser._id !== listing.owner._id) { %>
        <form method="POST" action="/listings/<%= listing._id %>/reviews" class="needs-validation" novalidate>
          <h3>Leave a Review</h3>
          <div class="mb-3 mt-3">
          <fieldset class="starability-slot">      
            <input type="radio" id="no-rate" name="review[rating]" value="1"  checked/>
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]"value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Description</label>
            <textarea name="review[comment]" class="form-control" id="comment" cols="50" rows="5" required></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter the comment.</div>
          </div>
          <div class="mb-3 mt-3">
            <button class="btn btn-dark mt-3">Submit Review</button>
          </div>
        </form>
        <hr/>
      <% } %>

    <% if(listing.reviews.length > 0) { %>
      <div class="row">
        <h3>All Reviews</h3>
        <% for (let review of listing.reviews) { %>
          <div class="col-12 col-md-8 col-lg-6 mb-3">
            <div class="card">
              <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title">Author: <%= review.author.username %> </h5>
                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                <p class="card-text"><strong>Comment:</strong> <%= review.comment %></p>
              </div>
              <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-dark mt-2 w-auto">Delete Review</button>
              </form>
            </div>
          </div>
        <% } %>
      </div>
      <% } %>

    </div>
  <% } %>
  <div class="col-8 offset-2 mb-3">
    <h5>Where you will be</h5>
    <div id="map">
    </div>
  </div>
</div>

<script src="/js/map.js"></script>