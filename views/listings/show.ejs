<%- layout('layouts/boilerplate') %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
        <h1><%= listing.title %></h1>
        <p><strong>Description:</strong> <%= listing.description %></p>
        
        <p><strong>price &#36;</strong><%= listing.price.toLocaleString("en-US") %></p>
        
        <p><strong>Location:</strong> <%= listing.location %>, <%= listing.country %></p>
        
        <img src="<%= listing.image %>" alt="<%= listing.title %>" style="max-width: 300px; max-height: 300px;">
        
        <p> Location : <%= listing.location %></p>
        
        <a href="/listings/<%= listing._id %>/edit"> <button class="btn btn-dark edit-btn"> Edit</button></a>
        <br/>
        <br/>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark ">delete</button>
        </form>

    </div>
</div>
</body>
